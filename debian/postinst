#!/bin/sh
set -e

# Скрипт выполняется после установки пакета

# Устанавливаем Python зависимости
if [ -f /usr/share/xgamma-gui-tool/requirements.txt ]; then
    python3 -m pip install --user -r /usr/share/xgamma-gui-tool/requirements.txt || true
fi

# Обновляем базу данных desktop файлов
if command -v update-desktop-database >/dev/null 2>&1; then
    update-desktop-database -q || true
fi

exit 0